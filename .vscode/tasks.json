{
    "tasks": [
        {
            "label": "CMake: Rebuild Debug",
            "dependsOn": [ "CMake: Clean Debug", "CMake: Build Debug" ],
        },
        {
            "label": "CMake: Rebuild Release",
            "dependsOn": [ "CMake: Clean Release", "CMake: Build Release" ],
        },
        {
            "label": "CMake: Build Debug",
            "command": "cmake",
            "args": [ "--build", ".", "--config", "Debug" ],
            "options": { "cwd": "${workspaceFolder}/build/debug" },
            "dependsOn": [ "CMake: Prepare Debug" ],
        },
        {
            "label": "CMake: Build Release",
            "command": "cmake",
            "args": [ "--build", ".", "--config", "Release" ],
            "options": { "cwd": "${workspaceFolder}/build/release" },
            "dependsOn": [ "CMake: Prepare Release" ],
        },
        {
            "label": "CMake: Prepare Debug",
            "command": "cmake",
            "args": [ "-S", ".", "-B", "${workspaceFolder}/build/debug", "-DCMAKE_BUILD_TYPE=debug" ],
            "dependsOn": [ "Create Build Dir: Debug", "Conan: Install Debug" ],
        },
        {
            "label": "CMake: Prepare Release",
            "command": "cmake",
            "args": [ "-S", ".", "-B", "${workspaceFolder}/build/release", "-DCMAKE_BUILD_TYPE=releae" ],
            "dependsOn": [ "Create Build Dir: Release", "Conan: Install Release" ],
        },
        {
            "label": "CMake: Clean Debug",
            "command": "cmake",
            "args": [ "--build", ".", "--target", "clean" ],
            "options": { "cwd": "${workspaceFolder}/build/debug" },
        },
        {
            "label": "CMake: Clean Release",
            "command": "cmake",
            "args": [ "--build", ".", "--target", "clean" ],
            "options": { "cwd": "${workspaceFolder}/build/release" },
        },
        {
            "label": "Conan: Install Debug",
            "command": "conan",
            "args": [ "install", "conanfile.txt", "--build=missing" ],
            "options": { "cwd": "${workspaceFolder}/build/debug" },
            "dependsOn": [ "Conan: Prepare Debug" ],
        },
        {
            "label": "Conan: Install Release",
            "command": "conan",
            "args": [ "install", "conanfile.txt", "--build=missing" ],
            "options": { "cwd": "${workspaceFolder}/build/release" },
            "dependsOn": [ "Conan: Prepare Release" ],
        },
        {
            "label": "Conan: Prepare Debug",
            "command": "cp",
            "args": [ "conanfile.txt", "${workspaceFolder}/build/debug/" ],
            "dependsOn": [ "Create Build Dir: Debug" ],
        },
        {
            "label": "Conan: Prepare Release",
            "command": "cp",
            "args": [ "conanfile.txt", "${workspaceFolder}/build/release/" ],
            "dependsOn": [ "Create Build Dir: Release" ],
        },
        {
            "label": "Create Build Dir: Debug",
            "linux": { "command": "mkdir", "args": [ "-p", "${workspaceFolder}/build/debug" ], },
        },
        {
            "label": "Create Build Dir: Release",
            "linux": { "command": "mkdir", "args": [ "-p", "${workspaceFolder}/build/release" ], },
        },
    ],
    "version": "2.0.0"
}